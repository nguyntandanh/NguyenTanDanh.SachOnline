@{
    ViewBag.Title = "Xác nhận đơn hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="text-center">XÁC NHẬN ĐƠN HÀNG</h2>
<hr />

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("XacNhanDonHang", "SachOnline", FormMethod.Post))
        {
            <div class="form-group">
                <label>Họ tên:</label>
                <input type="text" name="HoTen" class="form-control" value="@((Session["TaiKhoan"] as NguyenTanDanh.SachOnline.Models.KHACHHANG)?.HoTen)" required />
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" name="DiaChi" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" name="DienThoai" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Ngày giao hàng:</label>
                <input type="date" name="NgayGiao" class="form-control" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-ok"></span> Xác nhận đơn hàng
                </button>
            </div>
        }
    </div>
</div>
